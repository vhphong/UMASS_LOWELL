all: main clean

main: main.o RingBuffer.o
	g++ -g main.o RingBuffer.o -o main

main.o: main.cpp
	g++ -g -c main.cpp --std=c++0x

test: test.o RingBuffer.o
	g++ -g test.o RingBuffer.o -o test -lboost_unit_test_framework

test.o: test.cpp
	g++ -g -c test.cpp

RingBuffer.o: RingBuffer.cpp RingBuffer.hpp
	g++ -g -c RingBuffer.cpp -lfsml-system --std=c++0x

clean: 
	rm -rf *.o *.gch *~ 
